FROM golang:latest

LABEL maintainer="akshit <akshit19991024@gmail.com>"

RUN mkdir -p /app/src

WORKDIR /app/src

COPY go.mod .

COPY go.sum .

RUN go mod download

COPY backend/server.go .

COPY backend/server.go .

COPY . .

RUN go build -o server .

RUN go build -o server1 .

EXPOSE 3000

EXPOSE 1234

CMD ["./server"]

CMD ["./server1"]
